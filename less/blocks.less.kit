// Form Block
.form-wrapper {
  input, textarea {
    border: 2px solid @black !important;
    box-shadow: inset 2px 2px 8px rgba(0,0,0,0.25) !important;
    padding: 0.5rem 1rem !important;
  }
}

// Newsletter Block
.form-fields {
  .field-element {
    border: 2px solid @black;
    box-shadow: inset 2px 2px 8px rgba(0,0,0,0.25) !important;
    padding: 0.5rem 1rem !important;
  }
}